<Page x:Class="VirtualEcosystem.IntroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VirtualEcosystem"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="IntroPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF85513E" Offset="1"/>
                <GradientStop Color="#FFE9F12C"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnNextPage" Content="PLAY" HorizontalAlignment="Left" Margin="387,233,0,0" VerticalAlignment="Top" Width="360" Click="btnNextPage_Click" Height="79" FontFamily="Mongolian Baiti" FontSize="48"/>
        <Label x:Name="Title" Content="A Hard Year" HorizontalAlignment="Left" Margin="360,30,0,0" VerticalAlignment="Top" Height="110" Width="451" FontSize="72" FontFamily="Segoe UI Black"/>
        <Button x:Name="btnTut" Content="Tutorial" HorizontalAlignment="Left" Margin="387,357,0,0" VerticalAlignment="Top" Width="360" Height="79" FontSize="48" FontFamily="Mongolian Baiti" Click="btnTut_Click"/>

    </Grid>
</Page>
